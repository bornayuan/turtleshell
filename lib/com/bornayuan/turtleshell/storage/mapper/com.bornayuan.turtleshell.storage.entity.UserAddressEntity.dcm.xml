<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
	xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
	<entity name="com\bornayuan\turtleshell\storage\entity\UserAddressEntity"
		table="ts_user_address">
		<id name="id" type="integer">
			<generator strategy="AUTO" />
		</id>

		<field name="label"   column="label"   type="string" length="60" />
		<field name="country" column="country" type="string" length="60" />
		<field name="state"   column="state"   type="string" length="60" />
		<field name="city"    column="city"    type="string" length="60" />
		<field name="street"  column="street"  type="string" length="120" />
		<field name="zip"     column="zip"     type="string" length="10" />

		<field name="createdTimestamp" column="created_timestamp" type="datetime" />
		<field name="updatedTimestamp" column="updated_timestamp" type="datetime" />
	</entity>
</doctrine-mapping>